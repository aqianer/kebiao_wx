page {
  --theme--:  #0AE8F0;
  --defalutBorderColor--: #666
}



.login {
  padding: 30rpx;
}
.header{
  display: flex;
  justify-content: center;
  margin-top: 200rpx;
  margin-bottom: 30rpx;
}
.header image{
  width: 288rpx;
  height: 176rpx;
}





.login button {
  /* position: absolute; */
  width: 100%;
  height: 48px;
  border-radius: 24px;
  /* opacity: 1; */
  box-shadow: 0px 0px 6px 0px rgba(0, 0, 0, 0.1);
  background: linear-gradient(90deg, rgba(193, 239, 245, 0.9) 0%, #0AE8F0 0%, #88F2DF 100%);
  color: #ffffff;
}

.form input:invalid {
  border: 2rpx dashed red;
}

.form input:valid {
  border: 2px solid black;
}

.form{
  height: 98rpx ;
  border-radius: 60rpx;
  
  margin-bottom: 20rpx;
  opacity: 1;
  padding: 20rpx;
  background: #ffffff;
  box-shadow: 0px 0px 2px -4px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  
}

.form image{
  width: 24px;
  padding-right: 22rpx;
  height: 13.33px;
}

.text-form{
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  margin-top: 2rpx;
  display: flex;
  align-items: center;  
  color: red;
}

.checkBox-form{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}